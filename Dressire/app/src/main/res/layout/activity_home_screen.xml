<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".HomeScreen">


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbars"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:elevation="4dp"
                android:background="@color/primary"/>

            <LinearLayout
                android:id="@+id/appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRES"
                    android:textSize="70sp"
                    android:fontFamily="@font/fashion"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/sire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIRE"
                    android:textSize="70sp"
                    android:fontFamily="@font/fashion"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <LinearLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browsing gowns has never been \neasier. Giving
you the Dress \nthat you Desire right at your screen."
                    android:textSize="20sp"
                    android:fontFamily="@font/frank"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:textSize="30sp"
                    android:fontFamily="@font/frank"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@layout/nav_menu"/>

    </androidx.drawerlayout.widget.DrawerLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="293dp"
        android:background="@drawable/stripes_w" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/stripes_b" />

    <ImageView
        android:layout_width="568dp"
        android:layout_height="674dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-295dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg_dress" />




</RelativeLayout>
